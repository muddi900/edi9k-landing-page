---
const steps = [
  {
    number: "1",
    title: "Import",
    description: "Add your video/audio files",
  },
  {
    number: "2",
    title: "Prompt",
    description: '"Add fade transition between clips"',
  },
  {
    number: "3",
    title: "Preview",
    description: "See results instantly",
  },
  {
    number: "4",
    title: "Export",
    description: "Render final video",
  },
];
---

<section id="how-it-works" class="py-24 px-6 bg-gradient-to-b from-gray-950 to-gray-900">
  <div class="max-w-6xl mx-auto">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        How It Works
      </h2>
      <p class="text-xl text-gray-400">
        Four simple steps to professional videos
      </p>
    </div>

    <!-- Steps -->
    <div class="grid md:grid-cols-4 gap-8">
      {steps.map((step, index) => (
        <div class="relative">
          {/* Connector line (except for last item) */}
          {index < steps.length - 1 && (
            <div class="hidden md:block absolute top-12 left-[calc(50%+2rem)] w-full h-0.5 bg-gradient-to-r from-purple-500 to-transparent"></div>
          )}

          <div class="relative text-center">
            {/* Number badge */}
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-br from-purple-600 to-blue-600 text-2xl font-bold mb-4 shadow-lg shadow-purple-500/50">
              {step.number}
            </div>

            {/* Title */}
            <h3 class="text-xl font-semibold mb-2">
              {step.title}
            </h3>

            {/* Description */}
            <p class="text-gray-400">
              {step.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
