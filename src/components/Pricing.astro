<section id="pricing" class="py-32 px-6">
  <div class="max-w-5xl mx-auto">
    <!-- Section header -->
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Try Free, Go Pro
      </h2>
      <p class="text-xl text-gray-400">
        No credit card to start
      </p>
    </div>

    <!-- Pricing cards -->
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Free tier -->
      <div class="p-10 rounded-3xl bg-gray-900/50 border border-gray-800 animate-on-scroll delay-100">
        <h3 class="text-3xl font-bold mb-2">Free</h3>
        <p class="text-gray-400 mb-8">Try it out</p>

        <div class="mb-8">
          <span class="text-5xl font-bold">$0</span>
          <span class="text-gray-400 text-lg">/forever</span>
        </div>

        <ul class="space-y-4 mb-8">
          <li class="flex items-start">
            <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-300">50 AI operations/month</span>
          </li>
          <li class="flex items-start">
            <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
