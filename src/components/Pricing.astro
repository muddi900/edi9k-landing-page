<section id="pricing" class="py-24 px-6">
  <div class="max-w-5xl mx-auto">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Simple Pricing
      </h2>
      <p class="text-xl text-gray-400">
        Start free, upgrade when you're ready
      </p>
    </div>

    <!-- Pricing cards -->
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Free tier -->
      <div class="p-8 rounded-2xl bg-gray-900/50 border border-gray-800">
        <h3 class="text-2xl font-bold mb-2">Free</h3>
        <p class="text-gray-400 mb-6">Get started with basics</p>

        <div class="mb-6">
          <span class="text-4xl font-bold">$0</span>
          <span class="text-gray-400">/month</span>
        </div>

        <ul class="space-y-3 mb-8">
          <li class="flex items-start">
            <span class="text-green-500 mr-2">✓</span>
            <span class="text-gray-300">Basic AI editing</span>
          </li>
          <li class="flex items-start">
            <span class="text-green-500 mr-2">✓</span>
            <span class="text-gray-300">3 exports per month</span>
          </li>
          <li class="flex items-start">
            <span class="text-green-500 mr-2">✓</span>
            <span class="text-gray-300">Watermark on exports</span>
          </li>
        </ul>
      </div>

      <!-- Pro tier -->
      <div class="p-8 rounded-2xl bg-gradient-to-br from-purple-900/30 to-blue-900/30 border border-purple-500/50 relative overflow-hidden">
        <!-- Popular badge -->
        <div class="absolute top-4 right-4 bg-purple-600 text-white text-sm font-semibold px-3 py-1 rounded-full">
          Popular
        </div>

        <h3 class="text-2xl font-bold mb-2">Pro</h3>
        <p class="text-gray-400 mb-6">For serious creators</p>

        <div class="mb-6">
          <span class="text-4xl font-bold">$12</span>
          <span class="text-gray-400">/month</span>
        </div>

        <ul class="space-y-3 mb-8">
          <li class="flex items-start">
            <span class="text-green-500 mr-2">✓</span>
            <span class="text-gray-300">Unlimited AI editing</span>
          </li>
          <li class="flex items-start">
            <span class="text-green-500 mr-2">✓</span>
            <span class="text-gray-300">Unlimited exports</span>
          </li>
          <li class="flex items-start">
            <span class="text-green-500 mr-2">✓</span>
            <span class="text-gray-300">No watermark</span>
          </li>
          <li class="flex items-start">
            <span class="text-green-500 mr-2">✓</span>
            <span class="text-gray-300">Priority support</span>
          </li>
          <li class="flex items-start">
            <span class="text-purple-400 mr-2">★</span>
            <span class="text-purple-400 font-semibold">Beta users get 50% off</span>
          </li>
        </ul>
      </div>
    </div>

    <p class="text-center text-gray-500 mt-8 text-sm">
      Prices subject to change. Beta users lock in early-bird pricing.
    </p>
  </div>
</section>
